<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d8"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemImagenCabecera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/item_fondo"
            android:transitionName="transition_imagen"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/itemNombreExamen"
            style="@style/ItemNombreExamen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="transition_titulo"
            android:layout_alignBottom="@id/itemImagenCabecera"
            android:padding="@dimen/d8"
            android:text="Prueba"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

        <TextView
            android:id="@+id/itemFechaExamen"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ItemFechaExamen"
            android:layout_below="@id/itemNombreExamen"
            android:padding="@dimen/d8"
            android:text="OLa"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:id="@+id/itemAsignaturaExamen"
            style="@style/ItemAsignaturaExamen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemFechaExamen"
            android:padding="@dimen/d8"
            android:text="asdfasd" />
    </RelativeLayout>
</android.support.v7.widget.CardView>